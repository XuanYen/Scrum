extends ../layouts/common
block content
    form(action="/upload", method="POST", ,enctype="multipart/form-data")
        .form-group
            label(for='title') Title
            input#title.form-control(type='text',name='title',placeholder='Title')
        .form-group
            label(for='author') Author
            input#author.form-control(type='text',name='author',placeholder='Author')
        .form-group
            label(for='genre') Genre
            select#genre.form-control(type='text', name="genre")
                option IT and Computing
                option Y hoc
                option Ky nang song
                option Manga
                option Thieu nhi
                option Chinh tri phap luat
                option Van hoc
                option Art
                option Comic
                option Fantasy
                option History
                option Philosophy
                option Psychology        
        .form-group
            label(for='description') Description
            input#description.form-control(name="description", rows='5', placeholder='Description')
        .form-group
            label(for="cover") Upload Cover
            input#cover.form-control(name="cover", type="file", rows='5')
        button.btn.btn-primary(type='submit') Upload

